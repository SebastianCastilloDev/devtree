{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "module": "NodeNext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "typeRoots": ["./node_modules/@types"],
        "skipLibCheck": true, // Importante para evitar conflictos de tipos

    },
    "include": ["src/**/*.ts"]
}